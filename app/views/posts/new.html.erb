<fieldset>
	<legend>New post</legend>
	<%= form_for @post,:html 	=> { multipart: true } do |f| %>
		<%= f.label			 :title							%>
		<%= f.text_field :title 						%>
		<br>
		<%= f.label			 :image							%>
		<%= f.file_field :image 						%>
		<br>		
		<%= f.label			 :tags_list,('Tags')%>
		<%= f.text_field :tags_list 				%>
		<br>
		<%= f.label			 :price							%>
		<%= f.text_field :price							%>
		<br>
		<%= f.submit 'Post' 								%>
	<% end %>
</fieldset>